#:kivy 1.0
playActionDisplay:
    name: "playActionDisplay"

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        GridLayout:
            cols: 2
            size_hint: 1, 0.1
            Label:
                text: "Red Team"
                font_size: 24
                canvas.before:
                    Color:
                        rgba: (255,0,0,1)
                    Rectangle:
                        pos: self.pos
                        size: self.size
            Label:
                text: "Green Team"
                font_size: 24
                canvas.before:
                    Color:
                        rgba: (0,255,0,1)
                    Rectangle:
                        pos: self.pos
                        size: self.size

        GridLayout:
            cols: 2
            size_hint: 1, 0.6
            Label:
                id: redPlayerNames
                text: "Player names here"
                font_size: 24
            Label:
                id: greenPlayerNames
                text: "Player names here"
                font_size: 24

        GridLayout:
            cols: 2
            size_hint: 1, 0.1
            Label:
                id: redScore
                text: "Score"
                font_size: 50
                # size_hint: 1.75, 0.1
            Label:
                id: greenScore
                text: "Score"
                font_size: 50
                # size_hint: 1.75, 0.1

        Label:
            id: playerActions
            text: "Player actions stream will go here"
            font_size: 16
            size_hint: 1, 1
            canvas.before:
                Color:
                    rgba: (72, 122, 180, .7)
                Rectangle:
                    pos: self.pos
                    size: self.size

        Label:
            id: countdownTimer
            text: "Timer"
            font_size: 25
            size_hint: 1.75, 0.1